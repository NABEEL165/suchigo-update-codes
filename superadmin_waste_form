                        <option value="Expiry Medicine">Expiry Medicine</option>
                        <option value="Hair Waste">Hair Waste</option>
                    </select>
                </div>
            </div>

            <!-- Pickup Date Button Section -->
            <div class="form-group full-width">
                <label><i class="fas fa-calendar-alt"></i> Pickup Date</label>
                <button type="button" id="selectDateBtn" class="date-select-btn" disabled>
                    <i class="fas fa-calendar-plus"></i>
                    <span id="dateButtonText">Select Local Body First</span>
                </button>

                <!-- Selected Date Display -->
                <div class="selected-date-display" id="selectedDateDisplay" style="display: none;">
                    <i class="fas fa-check-circle"></i>
                    <span>Selected: <strong id="displaySelectedDate"></strong></span>
                    <button type="button" id="changeDateBtn" class="change-date-btn">
                        <i class="fas fa-edit"></i> Change
                    </button>
                </div>
            </div>

            <!-- Hidden input for selected calendar date -->
            <input type="hidden" name="selected_date" id="selected_date">

            <button type="submit" class="submit-btn">
                <i class="fas fa-paper-plane"></i>
                Submit Waste Profile
            </button>
        </form>

        <!-- Calendar Modal (Outside form) -->
        <div class="calendar-modal" id="calendarModal" style="display: none;">
            <div class="calendar-modal-content">
                <div class="calendar-header">
                    <div class="calendar-title-row">
                        <h3><i class="fas fa-calendar-alt"></i> Select Pickup Date</h3>
                        <button type="button" id="closeCalendar" class="close-calendar-btn">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <p>Click on an available date (green) to schedule your pickup</p>
                </div>

                <div class="loading-spinner" id="loadingSpinner">
                    <div class="spinner"></div>
                    <p>Loading available dates...</p>
                </div>

                <div id="calendar"></div>

                <div class="selected-date-info" id="selectedDateInfo">
                    <i class="fas fa-check-circle"></i>
                    <span>Pickup scheduled for: <strong id="selectedDateText"></strong></span>
                    <button type="button" id="confirmDateBtn" class="confirm-date-btn">
                        <i class="fas fa-check"></i> Confirm Date
                    </button>
                </div>
            </div>
        </div>

        <div class="success-animation" id="successAnimation">
            <div class="checkmark"></div>
            <h3>Profile Created Successfully!</h3>
            <p>Your waste pickup has been scheduled.</p>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.js"></script>

<script>
     const menuToggle = document.getElementById('menuToggle');
    const navbarLinks = document.getElementById('navbarLinks');

    menuToggle.addEventListener('click', () => {
      menuToggle.classList.toggle('active');
      navbarLinks.classList.toggle('active');
    });

    // Close mobile menu when window is resized to desktop view
    window.addEventListener('resize', () => {
      if (window.innerWidth > 768) {
        navbarLinks.classList.remove('active');
        menuToggle.classList.remove('active');
      }
    });

$(function(){
    var calendar = new FullCalendar.Calendar(document.getElementById('calendar'), {
        initialView: 'dayGridMonth',
        selectable: false,
        editable: false,
        events: [],
        height: 'auto',
        eventClick: function(info) {
            if (info.event.title === "Assigned") {
                // Remove previous selections
                calendar.getEvents().forEach(function(e){
                    e.setProp('classNames', []);
                });

                // Add selection to clicked event
                info.event.setProp('classNames', ['fc-event-selected']);

                // Update hidden input
                $("#selected_date").val(info.event.id);

                // Show selected date info in modal
                $("#selectedDateText").text(dateText);
                $("#selectedDateInfo").css('display', 'flex');
            }
        },
        eventDidMount: function(info) {
            if (info.event.title === "Assigned") {
                info.el.style.background = "linear-gradient(135deg, #4CAF50, #45a049)";
                info.el.style.cursor = "pointer";
                info.el.style.border = "none";
                info.el.style.borderRadius = "8px";
                info.el.style.transition = "all 0.3s ease";
            } else {
                info.el.style.background = "linear-gradient(135deg, #bdc3c7, #95a5a6)";
                info.el.style.cursor = "not-allowed";
                info.el.style.border = "none";
                info.el.style.borderRadius = "8px";
                info.el.style.opacity = "0.6";
            }
        }
    });
    calendar.render();

    // Load districts with animation
    function loadDistricts(stateId){
        $("#district").prop('disabled', true).html('<option value="">Loading...</option>');
        $.get("{% url 'super_admin_dashboard:load_districts' 0 %}".replace("0", stateId), function(data){
            $("#district").prop('disabled', false).empty().append('<option value="">-- Select District --</option>');
            data.forEach(function(d){
                $("#district").append('<option value="'+d.id+'">'+d.name+'</option>');
            });
        });
    }

    // Load local bodies with animation
    function loadLocalBodies(districtId){
        $("#localbody").prop('disabled', true).html('<option value="">Loading...</option>');
        $.get("{% url 'super_admin_dashboard:load_localbodies' 0 %}".replace("0", districtId), function(data){
            $("#localbody").prop('disabled', false).empty().append('<option value="">-- Select Local Body --</option>');
            data.forEach(function(lb){
                $("#localbody").append('<option value="'+lb.id+'">'+lb.name+' ('+lb.body_type+')</option>');
            });
        });
    }

    // Load calendar dates with loading animation
    function loadCalendar(localbodyId){
        // Enable the date selection button
        $("#selectDateBtn").prop('disabled', false);
        $("#dateButtonText").text('Select Pickup Date');

        // Reset any previous selections
        $("#selectedDateDisplay").hide();
        $("#selected_date").val('');

        // Store the localbody ID for later use
        window.currentLocalbodyId = localbodyId;
    }

    // Function to actually load calendar when button is clicked
    function showCalendarModal(localbodyId) {
        $("#calendarModal").show();
        $("#loadingSpinner").show();
        $("#calendar").hide();
        $("#selectedDateInfo").hide();

        calendar.removeAllEvents();
        $("#selected_date").val('');

        $.get("{% url 'super_admin_dashboard:get_calendar_dates' 0 %}".replace("0", localbodyId), function(events){
            events.forEach(function(e){
                calendar.addEvent({
                    id: e.id,
                    title: e.title,
                    start: e.start,
                    color: e.color
                });
            });

            setTimeout(function() {
                $("#loadingSpinner").hide();
                $("#calendar").show();
                calendar.render(); // Re-render calendar in modal
            }, 500);
        });
    }

    // Events with improved UX
    $("#state").change(function(){
        let id = $(this).val();
        $("#district, #localbody").val('').prop('disabled', true);
        $("#selectDateBtn").prop('disabled', true).find('#dateButtonText').text('Select Local Body First');
        $("#selectedDateDisplay").hide();
        if(id) loadDistricts(id);
    });

    $("#district").change(function(){
        let id = $(this).val();
        $("#localbody").val('').prop('disabled', true);
        $("#selectDateBtn").prop('disabled', true).find('#dateButtonText').text('Select Local Body First');
        $("#selectedDateDisplay").hide();
        if(id) loadLocalBodies(id);
    });

    $("#localbody").change(function(){
        let id = $(this).val();
        $("#selectedDateDisplay").hide();
        if(id) loadCalendar(id);
    });

    // Date selection button click
    $("#selectDateBtn").click(function() {
        if (window.currentLocalbodyId && !$(this).prop('disabled')) {
            showCalendarModal(window.currentLocalbodyId);
        }
    });

    // Close calendar modal
    $("#closeCalendar").click(function() {
        $("#calendarModal").hide();
    });

    // Change date button
    $("#changeDateBtn").click(function() {
        if (window.currentLocalbodyId) {
            showCalendarModal(window.currentLocalbodyId);
        }
    });

    // Confirm date selection
    $("#confirmDateBtn").click(function() {
        const selectedDate = $("#selected_date").val();
        const selectedDateText = $("#selectedDateText").text();

        if (selectedDate && selectedDateText) {
            $("#displaySelectedDate").text(selectedDateText);
            $("#selectedDateDisplay").show();
            $("#calendarModal").hide();
        }
    });

    // Close modal when clicking outside
    $("#calendarModal").click(function(e) {
        if (e.target === this) {
            $(this).hide();
        }
    });

    // ESC key to close modal
    $(document).keydown(function(e) {
        if (e.key === "Escape" && $("#calendarModal").is(":visible")) {
            $("#calendarModal").hide();
        }
    });

    // Form submission with animation
    $("#wasteForm").submit(function(e) {
        const submitBtn = $(".submit-btn");
        submitBtn.html('<i class="fas fa-spinner fa-spin"></i> Processing...');
        submitBtn.prop('disabled', true);

        // You can remove this setTimeout in actual implementation
        // This is just for demo purposes
        setTimeout(function() {
            submitBtn.html('<i class="fas fa-paper-plane"></i> Submit Waste Profile');
            submitBtn.prop('disabled', false);
        }, 2000);
    });

    // Add smooth scrolling for mobile
    $('select, input').on('focus', function() {
        if ($(window).width() < 768) {
            setTimeout(function() {
                $('html, body').animate({
                    scrollTop: $(document.activeElement).offset().top - 100
                }, 300);
            }, 300);
        }
    });
});

    // Form submission with validation + animation
$("#wasteForm").submit(function(e) {
    e.preventDefault(); // prevent default submission for validation

    const selectedDate = $("#selected_date").val();
    const submitBtn = $(".submit-btn");

    // Check if pickup date is selected
    if (!selectedDate) {
        // show error message
        $(".messages").remove(); // remove old messages if any
        $(".form-container").prepend(`
            <div class="messages">
                <ul>
                    <li><i class="fas fa-exclamation-triangle"></i> Please select a Pickup Date before submitting.</li>
                </ul>
            </div>
        `);
        // smooth scroll to top
        $("html, body").animate({ scrollTop: 0 }, "slow");
        return; // stop form submission
    }

    // If validation passes, continue with normal submission animation
    submitBtn.html('<i class="fas fa-spinner fa-spin"></i> Processing...');
    submitBtn.prop('disabled', true);

    // Submit form normally
    this.submit();
});


</script>

</body>
</html>
